@model Autoglass.Models.Produto

@{
    ViewData["Title"] = "Cadastar Produto";
}

<h1>Cadastro de Novo Produto</h1>

<h4>Preencha as informações do produto:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DescProd" class="control-label"></label>
                <input asp-for="DescProd" class="form-control" />
                <span asp-validation-for="DescProd" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Frabricacao" class="control-label"></label>
                        <input asp-for="Frabricacao" class="form-control" />
                        <span asp-validation-for="Frabricacao" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="validade" class="control-label"></label>
                        <input asp-for="validade" class="form-control" />
                        <span asp-validation-for="validade" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CodForne" class="control-label"></label>
                <input asp-for="CodForne" class="form-control" />
                <span asp-validation-for="CodForne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescFornec" class="control-label"></label>
                <input asp-for="DescFornec" class="form-control" />
                <span asp-validation-for="DescFornec" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CNPJ" class="control-label"></label>
                <input asp-for="CNPJ" class="form-control" />
                <span asp-validation-for="CNPJ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="quantidade" class="control-label"></label>
                <input asp-for="quantidade" class="form-control" />
                <span asp-validation-for="quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br /><br />
                <input type="submit" value="Cadastrar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <br /><br />
    <a class="btn btn-primary" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
